<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/action_panel"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:gravity="center"
  android:orientation="vertical">

  <LinearLayout
    android:id="@+id/action_move"
    android:layout_width="@dimen/icon_size_normal"
    android:layout_height="@dimen/icon_size_normal"
    android:layout_margin="@dimen/spacing_xsmall"
    style="@style/BorderlessBackgroundView"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
      android:layout_width="6dp"
      android:layout_height="@dimen/icon_size_normal"
      android:scaleType="centerCrop"
      android:src="@drawable/ic_more_vert_white_48dp"
      android:tint="@color/material_grey_400" />

    <ImageView
      android:layout_width="6dp"
      android:layout_height="@dimen/icon_size_normal"
      android:scaleType="centerCrop"
      android:src="@drawable/ic_more_vert_white_48dp"
      android:tint="@color/material_grey_400" />

  </LinearLayout>

  <ImageView
    android:id="@+id/action_copy"
    style="@style/FormatActionButtons"
    android:src="@drawable/ic_content_copy_white_48dp"
    android:visibility="gone" />

  <ImageView
    android:id="@+id/action_delete"
    style="@style/FormatActionButtons"
    android:src="@drawable/ic_delete_white_48dp"
    android:visibility="gone" />
</LinearLayout>